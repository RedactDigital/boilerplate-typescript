{
  "name": "typescript-node-boilerplate",
  "version": "1.0.0",
  "description": "This boilerplate uses TypeScript and Node.js to build applications. TypeScript adds optional static typing, and Node.js is a JavaScript runtime for building server-side apps. It's a great starting point for robust and scalable applications.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prettier": "prettier --write .",
    "lint": "prettier --check . && eslint --fix --ext .js,.jsx,.ts,.tsx . && cspell . --no-progress --unique",
    "build": "tsc",
    "start": "nodemon --watch 'app/**/*.ts' app/index.ts"
  },
  "author": "Patrick Rizzardi <patrick@redact.digital> (https://redact.digital)",
  "license": "MIT",
  "dependencies": {
    "convict": "^6.2.4",
    "datadog-winston": "^1.5.1",
    "dayjs": "^1.11.9",
    "dotenv": "^16.3.1",
    "mathjs": "^11.9.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/convict": "^6.1.3",
    "@types/datadog-winston": "^1.0.5",
    "@types/node": "^20.4.5",
    "cspell": "^6.31.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^5.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
